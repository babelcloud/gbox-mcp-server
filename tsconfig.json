{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "isolatedModules": true,
      "outDir": "dist",
      "rootDir": "."
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  } 